<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.example.android.shreygarg_deltatask3">

    <uses-permission android:name="android.permission.INTERNET" />

    <dist:module dist:instant="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppThemeRed">
        <activity android:name=".Detail_Activity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".LocationResultActivity"
            android:parentActivityName=".LocationActivity"/>
        <activity android:name=".MapMarker"/>
        <activity android:name=".CrimeDetails"
            android:screenOrientation="portrait"/>
        <activity android:name=".NoLocationActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".NoLocationResultActivity"
            android:parentActivityName=".ForceSelecterActivity"/>
        <activity android:name=".ForceSelecterActivity"
            android:parentActivityName=".NoLocationActivity"/>
        <activity android:name=".ForceDescription"
            android:parentActivityName=".Detail_Activity"/>
        <activity android:name=".LocationActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".FavoriteActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>