<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="1.5dp"
    android:id="@+id/locblock"
    android:background="#99ff2222">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:id="@+id/locationcrimedate" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude :"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:id="@+id/locationcrimelat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitudee :"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:id="@+id/locationcrimelong" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="Category"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/locationcrimecategory" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Persistent id"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:id="@+id/locationcrimestreet" />
    </LinearLayout>
    <ImageView
        android:layout_width="33dp"
        android:layout_height="44dp"
        android:src="@drawable/bookmark"
        android:id="@+id/favstarblock"
        android:layout_gravity="right"
        android:background="#aaaaaa"/>
</LinearLayout>